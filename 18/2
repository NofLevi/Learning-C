#include <stdio.h>
float average(float a,float b,float c) //delcare the function
{	
	return (a+b+c)/3;
}
int main()
{
	float a,b,c,avg;
	printf("Enter 3 numbers: ");
	scanf("%f %f %f",&a,&b,&c);
	printf("\nthe average is %f\n",average(a,b,c));//printing from the function
	
	a= 10;
	b= 20;
	c= 30;
	printf("%f",average(a,b,c));

}

#include <stdio.h>
void main()
{
    float x,y,sum;
    char opera;
    printf("Enter Number mathematical operator then another number: ");
    scanf("%f%c%f",&x,&opera,&y);
    switch(opera)
    {
        case '+': 
        printf("%f",sum=x+y);
        break;
        case '-': 
        printf("%f",sum=x-y);
        break;
        case '*': 
        printf("%f",sum=x*y);
        break;
        case '/': 
        printf("%f",sum=x/y);
        break;
        
    }
  
    
    
}
    

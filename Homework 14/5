#include <stdio.h>
#include <string.h>
int main()
{
	int num,i,max,opposite;
	char str[20],str2[20];
	printf("Enter a numbers: ");
	scanf("%d",&num);
	for(i=0;i<20;i++) //int into string oppositly//
	{
		str[i] = num % 10;
		num / 10;
	}
	max = strlen(str);
	opposite = max;
	for (i=0; i<=max;i++) // switch it from opposite too normal//
	{
		str2[i] = str[opposite-1];
		opposite --;
		printf("%c",str2[i]+48);
	}	
}
#include <stdio.h>
#include <string.h>
void main()
{
	int num,i,tempnum,counter=1;
	char str[20],str2[20],tempchar;
	printf("Enter a numbers: ");
	scanf("%d",&num);
	tempnum=num;
	while(tempnum>=10)
	{
		counter+=1;
		tempnum = tempnum / 10;
	}
	for(i=0;i<counter;i++) //int into string oppositly//
	{   
	    tempchar = (num % 10) + 48;
		str[i] = tempchar;
		num / 100;
	}
    puts(str);
}


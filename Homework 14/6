#include <stdio.h>
#include <string.h>
int main()
{
	char str[40],big[5]="AEIOU";
	int i,i2=0,max,words[6],count=0,biggest=0,longestword = 0,spaces=0,spacespot[6];//spaces also number of words// [WORK]
	puts("Enter a string");
	gets(str);
	max = strlen(str);
	for(i=0;i<=max;i++)//counting letters// [WORK]
	{
		count = count + 1;
		if(str[i]==(' ') || str[i] == str[max])
		{
			words[spaces]= count - 1;
			spaces= spaces + 1;
			spacespot[i2]= i;
			i2 = i2+1;
			count = 0;
		}
	}
	for (i=0;i<=spaces;i++) //which 1 is the biggest// [WORK]
	{
	if (words[i]>biggest)
		{	
			biggest = words[i];
			longestword=i;
		}
	}
	if (longestword=0);
	{
	
	for(i=0;i<=spacesspot[longestword;i++])//make the letters bigger [CHECK]// 
	{	
		for(i2=0;i2<5;i++)//longestword = 0 scenario//
		{
			if(str[i]=big[i2])
			{
				str[i]-32;
			}
		}
	}
	}
	
}


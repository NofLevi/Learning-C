#include <stdio.h>
#include <string.h>
int main()
{
	char str[40];
	int i,i2=0,max,words[6],count=0,biggest=0,longestword = 0,spaces=0,spacespot[6];//spaces also number of words// [WORK]
	puts("Enter a string");
	gets(str);
	max = strlen(str);
	for(i=0;i<=max;i++)//counting letters// [WORK]
	{
		count = count + 1;
		if(str[i]==(' ') || str[i] == str[max])
		{
			words[spaces]= count - 1;
			spaces= spaces + 1;
			spacespot[i2]= i;
			i2 = i2+1;
			count = 0;
		}
	}
	for (i=0;i<=spaces;i++) //which 1 is the biggest// [WORK]
	{
	if (words[i]>biggest)
		{	
			biggest = words[i];
			longestword=i;
		}
	}	
	switch (longestword)
	{
		case(0):
		for(i=0;i<spacespot[longestword];i++)  //make the letters bigger if the longest is first [WORK]// 
		{	
		if (str[i] == 'a' || str[i] == 'u' || str[i] == 'i' || str[i] == 'o' || str[i] == 'e')
		{
			str[i]= str[i] - 32;
		}	
		}
		break;
	}
		case(1 || 2):
		{
			for(i= -1 + spacespot[longestword];str[i]!=' ';i--)
			{
			if (str[i] == 'a' || str[i] == 'u' || str[i] == 'i' || str[i] == 'o' || str[i] == 'e')
			{
				str[i]= str[i] - 32;
			}
			}
			break;
		}


	puts(str);
}



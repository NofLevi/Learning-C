#include <stdio.h>
#include <string.h>
int main()
{
	char str[20],str2[20],tav;
	int i,i2,max,max2,tempi;
	printf("Enter a char: ");
	scanf("%c",&tav);
	puts("Enter a String: ");
	gets (str);
	max = strlen(str);
	for (i=0;i<max;i++)
	{
		if(str[i]=tav)
		{	
			max2=max - i;
			tempi= i;
			for(i2=1;i2<max2;i2++)
			{
				str2[0]= tav;
				str2[i2] = str[tempi];
				tempi++;
			}
			strcat(str,str2);
		}
	}
	puts(str);	
}

#include <stdio.h>
void main()
{
    int num,gap,nums,count,sum = 0;
    printf("1.Enter the first integer:  2. gap:  3.how many numbers in the series" "");
    scanf("%d%d%d",&num,&gap,&nums);
    for (count = 1; count<=nums; count++)
    {
    	printf("%d ",num);
    	sum = sum + num;
    	num = num + gap; 	
	}   
	printf("\n The sum of these numbers is:%d",sum);
}
